<h1>To Do List</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Frequency</th>
    <th>~</th>
  </tr>

<% @activities.each do |activity| %>
  <tr>
    <td><%=h activity.description %></td>
    <td><%=h activity.frequency %></td>
    <td style="font-size: x-large;">
      <%= link_to 'X', new_activity_achievement_path(activity) %>
    </td>
  </tr>
<% end %>

</table>

